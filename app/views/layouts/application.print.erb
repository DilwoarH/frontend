<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title><% if @publication %><%= page_title(@publication) %><% else %><%= yield :title %><% end %></title>
  <% if @publication.description.present? %>
    <meta name="description" content="<%= @publication.description %>">
  <% end %>

  <%= yield :extra_headers %>
</head>
<body>
  <div id="wrapper" class="<%= wrapper_class(@publication || @presenter) %>">
    <main role="main">
      <%= yield %>
    </main>
  </div>
</body>
</html>
